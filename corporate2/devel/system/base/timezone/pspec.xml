        <Summary>Timezone data</Summary>
        <Description>timezone contains data files with rules for various timezones around the world.</Description>
        <!-- tzdata-base-0.tar.bz2 is a simple building infrastructure occasionally updated from glibc. -->
        <Archive sha1sum="0b0043f3e15b61eeff74a833da79f41d603e6db6" type="tarbz2">http://cekirdek.pardus.org.tr/~ozan/dist/sources/tzdata-base-0.tar.bz2</Archive>
        <Archive sha1sum="4f58cede47df8bba55b37982d8b38cd65266d412" type="targz" target="tzdata/tzcode2011i">ftp://munnari.oz.au/pub/oldtz/tzcode2011i.tar.gz</Archive>
        <Archive sha1sum="c6740ec9645b78750e2109b6d42cd283e16988d7" type="targz" target="tzdata/tzdata2011l">ftp://munnari.oz.au/pub/oldtz/tzdata2011l.tar.gz</Archive>
        <AdditionalFiles>
            <!-- this script generates tz-db used by Comar Clock methods -->
            <AdditionalFile permission="0755" target="dump-tz-db">dump-tz-db</AdditionalFile>
            <AdditionalFile permission="0644" target="config.mk">config.mk</AdditionalFile>
        </AdditionalFiles>
        <BuildDependencies>
            <Dependency>perl</Dependency>
            <Dependency>gawk</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch level="0">tzdata-2011l-kemerovo.patch</Patch>
            <Patch level="0">tzdata-2011l-brazil.patch</Patch>
            <Patch level="0">tzdata-2011j-ukraine.patch</Patch>

            <Patch level="1">tzdata-extra-tz-links.patch</Patch>
            <Patch level="1">tzdata-mdvconfig.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>timezone</Name>
        <Conflicts>
            <Package releaseTo="45">glibc</Package>
            <Package releaseTo="31">util-linux</Package>
        </Conflicts>
        <Replaces>
            <Package>glibc-zoneinfo</Package>
        </Replaces>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="executable">/usr/sbin</Path>
            <Path fileType="doc">/usr/share/doc/timezone</Path>
            <Path fileType="data">/usr/share/zoneinfo</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0755" target="/usr/bin/timezone">timezone.py</AdditionalFile>
        </AdditionalFiles>
        <Provides>
            <COMAR script="package.py">System.Package</COMAR>
            <COMAR script="clock.py">Time.Clock</COMAR>
        </Provides>
    </Package>

