        -->
        <BuildDependencies>
            <!-- Low level interface to Java support (erlang-jinterface) -->
            <Dependency>sun-jdk</Dependency>

            <!-- wxWidgets support (erlang-wx) -->
            <Dependency>wxGTK-devel</Dependency>

            <Dependency>unixODBC</Dependency>

            <!-- TCL/TK support (erlang-gs) -->
            <Dependency>tcl</Dependency>
            <Dependency>tcltk</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch level="1">otp-0001-Do-not-format-man-pages.patch</Patch>
            <Patch level="1">otp-0002-Remove-rpath.patch</Patch>
            <Patch level="1">otp-0004-Fix-shared-libraries-installation.patch</Patch>
            <Patch level="1">otp-0005-Fix-for-dlopening-libGL-and-libGLU.patch</Patch>
            <Patch level="1">otp-0006-Fix-check-for-compile-workspace-overflow.patch</Patch>
            <Patch level="1">otp-0007-Install-missing-emacs-files.patch</Patch>
            <Patch>erlang-glibc.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>erlang</Name>
        <RuntimeDependencies>
            <Dependency>tcltk</Dependency>
            <Dependency>sun-jdk</Dependency>
            <Dependency>unixODBC</Dependency>
            <Dependency>wxGTK-devel</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="library">/usr/lib</Path>
        </Files>
    </Package>

    <!--
    <Package>
        <Name>erlang-manpages</Name>
        <Summary>UNIX man pages for erlang</Summary>
        <Files>
            <Path fileType="man">/usr/share/man</Path>
        </Files>
    </Package>
    -->

    <Package>
        <Name>erlang-devel</Name>
        <Summary>Development headers and libraries for erlang</Summary>
        <Files>
            <Path fileType="header">/usr/lib/erlang/usr/include</Path>
            <Path fileType="library">/usr/lib/erlang/usr/lib</Path>
        </Files>
    </Package>


    <Package>
        <Name>erlang-emacs</Name>
        <Summary>Erlang integration for Emacs</Summary>
        <RuntimeDependencies>
            <Dependency>emacs</Dependency>
            <Dependency>erlang</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="data">/usr/share/emacs</Path>
            <Path fileType="data">/etc/emacs</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile target="/etc/emacs/site-lisp/erlang-mode.el">erlang-mode.el</AdditionalFile>
        </AdditionalFiles>
    </Package>

