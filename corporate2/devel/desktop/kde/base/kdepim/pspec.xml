            <!-- SUSE fixes -->
            <Patch>kmail-crash.diff</Patch>
            <Patch>kmail_allow_tls_login_auth.diff</Patch>
            <Patch>install-headers.diff</Patch>
            <Patch>start-kpilot-instead-complain.diff</Patch>
            <Patch>bug-382959_kdepim_fix_vcardparser.patch</Patch>

            <!-- Fix automake version -->
            <Patch level="1">fix-automake-version.patch</Patch>

            <!-- Fix build with gcc 4.4 -->
            <Patch>kdepim3-gcc4.4.patch</Patch>

            <!-- FIXME: Barış will correct that one :)
            <Patch>kpart-accountwizard.patch</Patch>
            -->

            <!-- http://bugs.pardus.org.tr/show_bug.cgi?id=5037 -->
            <Patch level="1">akregator_feeds.patch</Patch>

            <Patch>knode_threaded_crash.diff</Patch>

            <!-- http://websvn.kde.org/branches/work/~wstephens/ -->
            <Patch level="1">kdepim_networkstatus_branch.diff</Patch>

            <Patch>kitchensync-defaults.diff</Patch>
            <Patch>kitchensync-xmldiffalgo.diff</Patch>
            <Patch>unbreak-imap-filtering.patch</Patch>

            <!-- Desktop file translation fix for knode (#5667) -->
            <Patch>privacy_desktop.patch</Patch>

            <!-- When automatic domain name is added, kmail bloats
            the to: header, e.g. Foo <bar> is converted to
            Foo@domain <bar> instead of Foo <bar@domain>. This patch
            fixes this issue -->
            <Patch level="1">fix-buggy-kmail-header.patch</Patch>

            <!-- kubuntu patches -->

            <!-- Fixes potential crash in Kmail -->
            <Patch level="1">kubuntu_19_fix_gcal_crash.diff</Patch>
            <Patch level="1">kubuntu_02_kmail_file_execution.diff</Patch>
            <Patch level="1">kubuntu_17_upstream_r860376.diff</Patch>

            <!-- Prevents incidence loss under certain conditions as the UID map wasn't being reloaded. -->
            <Patch>kubuntu_20_upstream_r882942.diff</Patch>

            <!-- Prevents KMail crashing due to certain malicious base64-encoded mail parts. -->
            <Patch>kubuntu_21_upstream_r882976.diff</Patch>

            <!-- Enable korgac to be launched by KOrganizer (Fixes #6488) -->
            <Patch>korgac_no_autostart.patch</Patch>
