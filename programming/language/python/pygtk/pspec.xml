    <Package>
        <Name>pygtk-demo</Name>
        <IsA>app:gui</IsA>
        <Summary>PyGTK demo applications</Summary>
        <RuntimeDependencies>
            <Dependency release="current">pygtk</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/bin/pygtk-demo</Path>
            <Path fileType="library">/usr/lib/pygtk/2.*/pygtk-demo.py</Path>
            <Path fileType="data">/usr/lib/pygtk/2.*/demos</Path>
        </Files>
    </Package>

    <Package>
        <Name>pygtk-docs</Name>
        <IsA>data:doc</IsA>
        <Summary>PyGTK reference documents</Summary>
        <RuntimeDependencies>
            <Dependency releaseFrom="11">pygtk</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="doc">/usr/share/gtk-doc</Path>
        </Files>
    </Package>

