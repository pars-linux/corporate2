+        is(dst.contentDocument.querySelector("img").src,
+           document.querySelector("img").src,
+           "The source should be correctly set based on the base URI");
+        SimpleTest.finish();
+      },
+      function() {
+        SimpleTest.finish();
+      }
+    );
+  }, 0);
+});
+
+</script>
+</pre>
