<PISI>
    <Source>
        <Name>PolicyKit-kde</Name>
        <Homepage>http://www.pardus.org.tr</Homepage>
        <Packager>
            <Name>Gökçen Eraslan</Name>
            <Email>gokcen@pardus.org.tr</Email>
        </Packager>
        <License>GPLv2</License>
        <IsA>app:gui</IsA>
        <Summary>Authentication agent for PolicyKit to use in KDE</Summary>
        <Description>PolicyKit-kde provides a D-Bus session bus service that is used to bring up authentication dialogs used for obtaining privileges</Description>
        <Archive sha1sum="1142c48864f945242f1d2ff29232fa72e36d1796" type="tarbz2">http://cekirdek.pardus.org.tr/~gokcen/files/PolicyKit-kde-0.2.3.tar.bz2</Archive>
        <BuildDependencies>
            <Dependency>kdelibs</Dependency>
        </BuildDependencies>
    </Source>

    <Package>
        <Name>PolicyKit-kde</Name>
        <RuntimeDependencies>
            <Dependency>kdelibs</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/libexec</Path>
            <Path fileType="library">/usr/lib</Path>
            <!-- autostart dir for kde3 is /usr/kde/3.5/share/autostart -->
            <Path fileType="data">/usr/kde/3.5/share</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="localedata">/usr/share/locale</Path>
            <!-- autostart file for XFCE resides in /etc/xdg -->
            <Path fileType="data">/etc/xdg/autostart</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0644" target="/usr/kde/3.5/share/autostart/policykit-kde.desktop">policykit-kde.desktop</AdditionalFile>
            <AdditionalFile owner="root" permission="0644" target="/etc/xdg/autostart/policykit-xfce.desktop">policykit-xfce.desktop</AdditionalFile>
        </AdditionalFiles>
    </Package>

