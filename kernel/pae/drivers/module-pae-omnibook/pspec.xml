        <IsA>driver</IsA>
        <Summary>Linux kernel module for (but not limited to) HP Omnibook support</Summary>
        <Description>module-pae-omnibook is a linux kernel module for many HP Omnibook/Pavillon, Toshiba Satellite (with Phoenix BIOS) and Compal laptops.</Description>
        <Archive sha1sum="e03450c7fc2b95798d62b257017eca9329e663c6" type="tarbz2">http://cekirdek.pardus.org.tr/~ozan/dist/sources/omnibook-20090720.tar.bz2</Archive>
        <BuildDependencies>
            <Dependency release="135">kernel-module-headers-pae</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch>makefile.patch</Patch>

            <!-- Enable bluetooth on Toshiba Satellite A200 (#10566, #12436) -->
            <Patch level="1">add-toshiba-satellite-a200-quirk.patch</Patch>

            <!-- Enable bluetooth on Toshiba Satellite A210 (#10952) -->
            <Patch level="1">add-toshiba-satellite-a210-quirk.patch</Patch>

            <!-- Enable bluetooth on Toshiba Satellite A210 (#11300) -->
            <Patch level="1">add-toshiba-satellite-a300-quirk.patch</Patch>

            <!-- Enable bluetooth on Toshiba Satellite Pro U400 (#11809) -->
            <Patch level="1">add-toshiba-satellite-u400-13d.quirk.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>module-pae-omnibook</Name>
        <RuntimeDependencies>
            <Dependency release="135">kernel-pae</Dependency>
            <Dependency>module-omnibook-userspace</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="library" permanent="true">/lib/modules</Path>
        </Files>
    </Package>

