            <Dependency release="139">kernel-module-headers</Dependency>
        </BuildDependencies>
    </Source>

    <Package>
        <Name>module-virtualbox-guest</Name>
        <RuntimeDependencies>
            <Dependency release="139">kernel</Dependency>
            <Dependency releaseFrom="98">baselayout</Dependency>
