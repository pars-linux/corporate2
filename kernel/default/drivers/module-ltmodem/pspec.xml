<PISI>
    <Source>
        <Name>module-ltmodem</Name>
        <Homepage>http://www.physcip.uni-stuttgart.de/heby/ltmodem/</Homepage>
        <Packager>
            <Name>Onur Küçük</Name>
            <Email>onur@pardus.org.tr</Email>
        </Packager>
        <ExcludeArch>x86_64</ExcludeArch>
        <License>GPLv2</License>
        <IsA>driver</IsA>
        <Summary>Modem driver for WinModems with Lucent Apollo (ISA) and Mars (PCI) chipsets</Summary>
        <Description>ltmodem is a Linux driver for so-called &quot;Winmodem&quot;s with Lucent Apollo (ISA) and Mars (PCI) chipsets.</Description>
        <Archive sha1sum="b8fe0cdd38e92f2498bcdd6d34f12b9cb7f5bf9b" type="targz">http://cekirdek.pardus.org.tr/~onur/distfiles/ltmodem-8.31_alpha10-20090420.tar.gz</Archive>
        <BuildDependencies>
            <Dependency release="136">kernel-module-headers</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch level="1">2.6.31.patch</Patch>
            <Patch level="1">2.6.32.patch</Patch>
            <Patch level="1">memset.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>module-ltmodem</Name>
        <RuntimeDependencies>
            <Dependency release="136">kernel</Dependency>
            <Dependency>module-ltmodem-userspace</Dependency>
        </RuntimeDependencies>
        <Replaces>
            <Package>ltmodem</Package>
        </Replaces>
        <Files>
            <Path fileType="library" permanent="true">/lib/modules</Path>
        </Files>
    </Package>

    <Package>
        <Name>module-ltmodem-userspace</Name>
        <Summary>Userspace documentation, tools, udev and modprobe rules for the kernel driver ltmodem</Summary>
        <Conflicts>
            <Package releaseTo="9">module-ltmodem</Package>
        </Conflicts>
        <Files>
            <Path fileType="data">/etc/modprobe.d</Path>
            <Path fileType="executable">/usr/sbin</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="data">/lib/udev/rules.d</Path>
            <Path fileType="man">/usr/share/man</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0644" target="/etc/modprobe.d/ltmodem.conf">ltmodem.modprobe.d</AdditionalFile>
            <AdditionalFile owner="root" permission="0644" target="/etc/modprobe.d/ltserial.conf">ltserial.modprobe.d</AdditionalFile>
        </AdditionalFiles>
    </Package>

