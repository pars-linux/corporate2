        <Summary>Userspace tools for Kernel-based Virtual Machine</Summary>
        <Description>KVM (for Kernel-based Virtual Machine) is a full virtualization solution for Linux on x86 hardware containing virtualization extensions (Intel VT or AMD-V). This package includes the userspace tools needed to use KVM.</Description>
        <Archive sha1sum="27bb9b55e6539c0dc6b57e08812df76b02544c62" type="targz">mirrors://sourceforge/kvm/qemu-kvm/0.12.2/qemu-kvm-0.12.2.tar.gz</Archive>
        <BuildDependencies>
            <Dependency>pulseaudio</Dependency>
            <Dependency>cyrus-sasl</Dependency>
            <Dependency>texi2html</Dependency>
            <Dependency>alsa-lib</Dependency>
            <Dependency>libsdl</Dependency>
            <Dependency>libaio</Dependency>
            <Dependency>gnutls</Dependency>
            <Dependency>bluez</Dependency>
            <Dependency>aalib</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch level="1">qemu-datadir.diff</Patch>
            <Patch level="1">kvm-qemu-default-memsize.patch</Patch>
            <Patch level="1">export-lc-all-in-configure.patch</Patch>

            <!-- Don't fallback to plain qemu is kvm fails -->
            <!-- FIXME: Why not?
            <Patch level="1">kvm-qemu-no-fallback-if-open-kvm-fails.patch</Patch>
            -->

            <!--Mac OS X support
            <Patch level="1">kvm-qemu-lpc.patch</Patch>
            <Patch level="1">kvm-qemu-applesmc.patch</Patch>
            <Patch level="1">kvm-qemu-ide-ich6.patch</Patch>
            <Patch level="1">kvm-qemu-rtl8139-link.patch</Patch>

            <Patch level="1">kvm-maccpuid.patch</Patch>
            <Patch level="1">kvm-qemu-macmodel.patch</Patch>
            <Patch level="1">kvm-qemu-multiboot.patch</Patch>
            <Patch level="1">kvm-add-macbios.patch</Patch>
            <Patch level="1">kvm-bios.patch</Patch>
            -->

            <!-- adds support for a relatively basic boot device selection menu to the bochs bios code -->
            <!--<Patch>kvm-bootmenu.patch</Patch>-->
        </Patches>
    </Source>

    <Package>
        <Name>kvm</Name>
        <RuntimeDependencies>
            <AnyDependency>
                <Dependency>module-kvm</Dependency>
                <Dependency>module-pae-kvm</Dependency>
            </AnyDependency>
            <Dependency>pulseaudio</Dependency>
            <Dependency>cyrus-sasl</Dependency>
            <Dependency>alsa-lib</Dependency>
            <Dependency>libsdl</Dependency>
            <Dependency>gnutls</Dependency>
            <Dependency>aalib</Dependency>
            <Dependency>qemu</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="data">/usr/share/kvm</Path>
            <Path fileType="man">/usr/share/man</Path>
        </Files>
    </Package>

